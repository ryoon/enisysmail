<?xml version='1.0' encoding='UTF-8'?>
<items>
  <% @groups.each do |g| %>
  <group>
    <id><%= g.id %></id>
    <name><%= g.name %></name>
    <has_children><%= g.children.count > 0 || g.addresses.extract_readable(Core.user).count > 0 ? 1 : 0 %></has_children>
  </group>  
  <% end %>
  <% @addresses.each do |address| %>
  <item>
    <id><%= address.id %></id>
    <name><%= address.name %></name>
    <email><%= address.email %></email>
  </item>
  <% end %>
</items>
